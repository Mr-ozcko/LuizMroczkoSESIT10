@model aulas.Models.Client

<h2>Adicionar Novo Cliente</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mail" class="control-label">E-mail</label>
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Emp" class="control-label">Empresa</label>
        <input asp-for="Emp" class="form-control" />
        <span asp-validation-for="Emp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

